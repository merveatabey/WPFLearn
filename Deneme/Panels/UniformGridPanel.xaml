<Window x:Class="Deneme.UniformGridPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Deneme"
        mc:Ignorable="d"
        Title="UniformGridPanel" Height="450" Width="800">
   <!--içerisindeki elementleri satır ve sütunlara ayırarak hizalar. 
   Elementin yükseklik genişlik konum vs. özelliklerini değiştirirsek
   bu değişikliği o elemente ayırdığı satır ve sütun içerisinde yapar. -->
    <UniformGrid Width="600" Height="400">
        <RadioButton Content="RadioButton"/>
        <RadioButton Content="RadioButton"/>
        <RadioButton Content="RadioButton"/>
        <RadioButton Content="RadioButton"/>
    </UniformGrid>
</Window>
