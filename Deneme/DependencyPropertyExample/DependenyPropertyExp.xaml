<Window x:Class="Deneme.DependencyPropertyExample.DependenyPropertyExp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Deneme.DependencyPropertyExample"
        mc:Ignorable="d"
        Title="DependenyPropertyExp" Height="450" Width="800">
    <StackPanel>
        <!--Kullanıcı Kontrolünü ekliyoruz-->
        <local:ColorChangingControl x:Name="MyControl" BackgroundColor ="LightBlue" Height="100" Margin="10"/>
        <!--Buton ile renk değişimini sağlayacağız-->
        <Button Content="Renk Değiştir" HorizontalAlignment="Center" Margin="0,217,0,0" VerticalAlignment="Top" Height="36" Width="280" Click="ChangeColor_Click"/>

    </StackPanel>
</Window>
